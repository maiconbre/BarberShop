# Test environment variables
NODE_ENV=test

# Use SQLite in memory for tests to avoid PostgreSQL authentication issues
TEST_DATABASE_URL=sqlite::memory:

# JWT configuration for tests
JWT_SECRET=test_jwt_secret_key_for_testing_purposes_only
JWT_EXPIRES_IN=1h

# Refresh token configuration for tests
REFRESH_TOKEN_SECRET=test_refresh_token_secret_key_for_testing_purposes_only
REFRESH_TOKEN_EXPIRES_IN=1d

# Server configuration for tests
PORT=3001
HOST=localhost

# Disable SQL logs for tests
ENABLE_SQL_LOGS=false