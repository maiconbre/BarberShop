{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "migrate": "node scripts/migration-runner.js",
    "migrate:status": "node scripts/migration-runner.js status",
    "migrate:rollback": "node scripts/migration-runner.js down",
    "migrate:create": "node scripts/create-migration-template.js",
    "migrate:dev": "set NODE_ENV=development&& node scripts/migration-runner.js",
    "migrate:prod": "set NODE_ENV=production&& node scripts/migration-runner.js",
    "db:setup": "node scripts/configure-env.js",
    "db:config": "node scripts/configure-env.js",
    "db:test": "node scripts/test-migration.js",
    "env:setup": "node scripts/configure-env.js",
    "env:local": "copy .env.local .env && echo Arquivo .env configurado para desenvolvimento local",
    "env:supabase": "node scripts/configure-env.js",
    "env:production": "copy .env.production .env && echo Arquivo .env configurado para produção com Supabase",
    "db:check": "node scripts/test-migration.js",
    "db:create": "createdb barbershop -U postgres -h localhost",
    "db:drop": "dropdb barbershop -U postgres -h localhost",
    "db:reset": "npm run db:drop && npm run db:create && npm run migrate:dev",
    "prod:setup": "npm run env:production && npm run migrate:prod",
    "prod:start": "set NODE_ENV=production&& npm start",
    "prod:migrate": "set NODE_ENV=production&& npm run migrate",
    "prod:test": "set NODE_ENV=production&& node scripts/test-supabase-connection.js",
    "supabase:test": "node scripts/test-supabase-connection.js",
    "supabase:fix": "node scripts/test-supabase-fix.js"
  },
  "keywords": [],
  "author": "Maicon Brendon",
  "license": "ISC",
  "type": "commonjs",
  "description": "",
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.13.3",
    "rate-limit-redis": "^4.2.2",
    "redis": "^4.7.1",
    "sequelize": "^6.35.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^30.0.5",
    "nodemon": "^3.0.3",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.4"
  }
}
